@using CrediWeb.Models.Entities
@model List<TarjetaCredito>
@{
    ViewData["Title"] = "Estados de Cuenta";
}
<div class="text-center">
    <div class="container container-fluid mt-3">
        <div class="row col-12 px-0 mx-0">
            <div class="col-sm-6 col-md-6 col-lg-6 px-0">
                <form id="form-consultar-estado-cuenta" method="post" enctype="multipart/form-data">
                    <div class="form-group d-flex">
                        <label for="Tarjeta" class="col-form-label mx-2">Tarjeta:</label>
                        <select class="form-control col-6" id="Tarjeta">
                            <option value="0">Selecccione Tarjeta</option>                            
                            @foreach (var tarjeta in Model)
                            {
                                <option value="@tarjeta.TarjetaID">@tarjeta.NumeroTarjeta</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-success mx-3" id="btn-realizar-consulta">Consultar</button>
                    </div>
                </form>
            </div>
            <div class="col-sm-6 col-md-6 col-lg-6 px-0">
                <h2 class="float-right">Estados de Cuenta</h2>
            </div>
        </div>
        <div class="row mt-3 col-12" id="div-estado-cuenta">            
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/scripts/Transacciones.js"></script>
    <script>
        var urlGetEstadoCuentaByTarjeta = '@Url.Action("GetEstadoCuentaByTarjeta", "Transactions")';
    </script>
}
