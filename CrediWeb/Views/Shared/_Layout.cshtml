<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CrediWeb</title>
    <link href="~/lib/sweetAlert/css/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/lib/datatables/css/datatables.min.css" rel="stylesheet" />
    <link href="~/css/adminlte.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="hold-transition layout-top-nav">
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
            <div class="container">
                <a href="@Url.Action("Index","Home")" class="navbar-brand">
                    <img src="~/images/AdminLTELogo.png" alt="Logo" class="brand-image img-circle elevation-3"/>
                    <span class="brand-text font-weight-light">CrediWEB</span>
                </a>
                <div class="collapse navbar-collapse order-3" id="navbarCollapse">
                    <!-- Left navbar links -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a href="@Url.Action("EstadosCuenta","Transactions")" class="nav-link">Estados de Cuenta</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Pagos","Transactions")" class="nav-link">Pagos</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Compras","Transactions")" class="nav-link">Compras</a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Historial","Transactions")" class="nav-link">Historial de Transacciones</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a id="dropdownSubMenu1" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" class="nav-link dropdown-toggle">Mantenimientos</a>
                            <ul aria-labelledby="dropdownSubMenu1" class="dropdown-menu border-0 shadow">
                                <li><a href="@Url.Action("Titulares","Maintenance")" class="dropdown-item">Nuevo Titular</a></li>
                                <li><a href="@Url.Action("Tarjetas","Maintenance")" class="dropdown-item">Nueva Tarjeta</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- /.navbar -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Main content -->
            <div class="content">
                <div class="container">
                    <div class="row">
                        <div class="container">
                            <main role="main" class="pb-3">
                                @RenderBody()
                            </main>
                        </div>
                    </div>
                    <!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content -->
        </div>
        <footer class="main-footer border-top text-muted text-center">
            <strong>Copyright &copy; @DateTime.Now.Year CrediWeb</strong> All rights reserved.
        </footer>
    </div>
    <div class="preloader flex-column justify-content-center align-items-center" id="loader">
        <img class="animation-shake" src="~/images/AdminLTELogo.png" alt="loaderIMG" height="60" width="60" />
    </div>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/bootstrap/bootstrap.bundle.js"></script>
    <script src="~/lib/sweetAlert/js/sweetalert2.min.js"></script>
    <script src="~/lib/datatables/js/datatables.min.js"></script>
    <script src="~/lib/moment/moment.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
